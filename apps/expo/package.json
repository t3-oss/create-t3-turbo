    "expo-constants": "~14.4.2",
    "expo-linking": "~5.0.2",
    "expo-router": "2.0.12",
    "expo-splash-screen": "~0.22.0",
    "expo-status-bar": "~1.7.1",
    "nativewind": "^4.0.13",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.7",
    "react-native-gesture-handler": "~2.12.0",
