    "@acme/tailwind-config": "^0.1.0",
    "@tauri-apps/cli": "^1.4.0",
    "cross-env": "^7.0.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
