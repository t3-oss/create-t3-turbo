{
  "name": "@acme/ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.tsx"
  },
  "license": "MIT",
  "scripts": {
    "add": "pnpm dlx shadcn-ui add",
